<h2> <%= @ong.nombreOng %></h2>
<p> <%= @ong.desc %></p>
<p> Rating: <%= @ong.rating %></p>
<% if @ong.ratings.exists?(["user_id = ?", current_user.id]) %>
  <p>Ya rateaste esta ong con <%= current_user.ratings.find_by("organization_id = ?", @ong.id).cant %> puntos</p>
<% else %>
  <%= form_tag(rate_path(@ong.id), method: :patch) do %>
    <%= number_field(:points,nil,min:0,max:5,step: 0.1) %>
    <%= submit_tag ("Ratear Ong"), name: nil %>
  <% end %>
<% end %>
<% if subscripto?(current_user,@ong) %>
  <p>Estas subscripto a esta ong</p>
<% else %>
  <%= form_tag(subscribe_path(@ong.id), method: :patch) do %>
    <%= submit_tag ("Subscribirse"), name: nil %>
  <% end %>
<% end %>
<h2> Post disponibles:</h2>

<% @ong.posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p><%= post.descPst %></p>

  <% if post.expired %>
    <span> Ya Expiro</span>
  <% elsif post.cantAct >= post.cantMax %>
    <span> Esta lleno</span>
  <% end %>

  <span><%= link_to "Ver MÃ¡s...", post_path(post) %></span>
<% end %>
