<h2> <%= @ong.nombreOng %></h2>
<p> <%= @ong.desc %></p>
<%= link_to "Crear un nuevo Post", nuevo_post_path %>
<%= link_to "Cerrar Sesion", ong_sign_out_path %>
<h2> Tus posts disponibles:</h2>

<% @posts.each do |post| %>
  <% if !post.expired %>
    <li>
      <p><%= post.descPst %></p>
      <span><%= post.lugar %></span>
      <span><%= post.hora %></span>
      <span><%= post.cantMin %> - <%= post.cantMax %></span>
      <span>Se enlistaron <%= post.cantAct %> personas a esta actividad</span>
    </li>
    <!--<%= link_to "Eliminar este post?", post ,method: :delete %>-->
    <!-- #link to updatearlo ––>
  <% end %>
<% end %>
